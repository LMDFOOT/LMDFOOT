{% extends 'Back/base.html.twig' %}

{% block title %}Stadium {% endblock %}

{% block body %}
    <h1>Stadium</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stadium.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stadium.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ stadium.capacity }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ stadium.createdAt ? stadium.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ stadium.updatedAt ? stadium.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ stadium.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stadium_index') }}">back to list</a>

    <a href="{{ path('stadium_edit', {'id': stadium.id}) }}">edit</a>

    {{ include('back/stadium/_delete_form.html.twig') }}
{% endblock %}
