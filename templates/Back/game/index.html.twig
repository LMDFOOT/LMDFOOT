{% extends 'Back/base.html.twig' %}
{% block title %}{{ 'game.list'|trans }}{% endblock %}
{% block body %}
    <a class="btn btn-success" href="{{ path('game_new') }}">
        <i class="fas fa-fw fa-plus"></i>
        {{ 'game.add'|trans }}
    </a>
    <hr>
<div class="table-responsive">
    <table class="table table-striped table-bordered" id="dataTable">
        <thead class="thead-dark">
            <tr>
                <th>{{ 'game.matchday'|trans }}</th>
                <th>{{ 'game.teamHome'|trans }}</th>
                <th>{{ 'game.teamAway'|trans }}</th>
                <th>{{ 'game.referee'|trans }}</th>
                <th>{{ 'game.competition'|trans }}</th>
                <th>{{ 'game.stadium'|trans }}</th>
                <th>{{ 'game.season'|trans }}</th>
                <th>{{ 'actions.name'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.matchday }}</td>
                <td>{{ game.teamHome.name }}</td>
                <td>{{ game.teamAway.name }}</td>
                <td>{{ game.referee.firstname }}</td>
                <td>{{ game.competition.name }}</td>
                <td>{{ game.stadium.name }}</td>
                <td>{{ game.season.seasonYear }}</td>

                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('game_show', {'id': game.id}) }}">
                        <i class="fas fa-fw fa-eye"></i>
                        {{ 'show'|trans }}
                    </a>
                    <a class="btn btn-info btn-sm" href="{{ path('game_edit', {'id': game.id}) }}">
                        <i class="fas fa-fw fa-pen"></i>
                        {{ 'edit'|trans }}
                    </a>
                    {{ include('Back/game/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'nothing'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}

    <!-- Page level plugin JavaScript-->
    <script src="{{ asset('back/vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/vendor/datatables/dataTables.bootstrap4.js') }}"></script>

    <!-- Demo scripts for this page-->
    <script src="{{ asset('back/js/demo/datatables-demo.js') }}"></script>

{% endblock %}