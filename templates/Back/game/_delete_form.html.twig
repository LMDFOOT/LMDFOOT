<form style="display: inline-block" method="post" action="{{ path('game_delete', {'id': game.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-fw fa-trash"></i>
        {{ 'delete'|trans }}
    </button>
</form>
