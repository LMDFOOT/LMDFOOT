{% block _player_playerMercatos_widget %}
    <p>Ici, vous pouvez ajouter vos mercatos !</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-playerMercatos" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Ajouter un mercato
        </button>
    </div>
{% endblock %}

{% block _player_playerMercatos_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _player_playerMercatos_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}