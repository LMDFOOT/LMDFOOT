{% extends 'Back/base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Ip_address</th>
                <td>{{ comment.ipAddress }}</td>
            </tr>
            <tr>
                <th>Id_post</th>
                <td>{{ comment.idPost }}</td>
            </tr>
            <tr>
                <th>Name_post</th>
                <td>{{ comment.namePost }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ comment.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('back/comment/_delete_form.html.twig') }}
{% endblock %}
