{% extends 'Back/base.html.twig' %}

{% block title %}Thread{% endblock %}
{% block body %}
    {% block breadcrumb %}Thread{% endblock %}
    <h1>Thread</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ thread.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ thread.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ thread.createdAt ? thread.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ thread.updatedAt ? thread.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ thread.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ thread.archived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td>
                    {% for thread in articles %}
                        <a href="{{ path('article_show', {'id': thread.id}) }}">{{ thread.title }}</a> <br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('thread_index') }}">{{ 'back_list'|trans }}</a>

    <a href="{{ path('thread_edit', {'id': thread.id}) }}">edit</a>

    {{ include('Back/thread/_delete_form.html.twig') }}
{% endblock %}
