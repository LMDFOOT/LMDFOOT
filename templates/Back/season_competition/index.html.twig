{% extends 'Back/base.html.twig' %}

{% block title %}{{ 'season.edit'|trans }}{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.css">
{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Comp√©tition</th>
                <th>NumberParticipate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season_competition in season_competitions %}
            <tr>
                <td>{{ season_competition.competition.name }}</td>
                <td>{{ season_competition.numberParticipate }}</td>
                <td>
                    <a href="{{ path('season_competition_show', {'id': season_competition.id}) }}">show</a>
                    <a href="{{ path('season_competition_edit', {'id': season_competition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_competition_new') }}">Create new</a>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.js"></script>
    <script>
        $(document).ready(function() {
            $('#season_competition_teams').selectize({
                maxItems: 30
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>
{% endblock %}