{% extends 'Back/base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Section</th>
                <td>
                    {% if team.section == 0 %}
                        {{ 'men'|trans }}
                    {% elseif team.section == 1 %}
                        {{ 'women'|trans }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ team.createdAt ? team.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ team.updatedAt ? team.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ team.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">{{ 'back_list'|trans }}</a>

    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>

    {{ include('Back/team/_delete_form.html.twig') }}
{% endblock %}
