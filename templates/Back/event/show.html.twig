{% extends 'Back/base.html.twig' %}

{% block title %}Événement{% endblock %}

{% block body %}
    <h1>Événement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ event.status }}</td>
            </tr>
            <tr>
                <th>Date de debut</th>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de participant max</th>
                <td>{{ event.maxParticipant }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('event_index') }}">{{ 'back_list'|trans }}</a>

    <a class="btn btn-info" href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('Back/event/_delete_form.html.twig') }}
{% endblock %}
