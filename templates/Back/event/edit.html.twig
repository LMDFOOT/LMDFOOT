{% extends 'Back/base.html.twig' %}

{% block title %}{{ 'event.edit'|trans }}{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.css">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('event_index') }}">{{ 'event.name'|trans }}</a>
    </li>
{% endblock %}

{% block body %}
    {{ include('Back/event/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('event_index') }}">{{ 'back_list'|trans }}</a>

    {{ include('Back/event/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.js"></script>
    <script>
        $(document).ready(function() {
            $('#event_organizers').selectize({
                maxItems: 10
            });
        });
    </script>
{% endblock %}