{% extends 'Front/base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <!--// Main Content //-->
    <div class="kode-content">
        <div class="kode-subheader subheader-height">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h1>Cat√©gorie</h1>
                    </div>
                    <div class="col-md-6">
                        <ul class="kode-breadcrumb">
                            <li><a href="#">Accueil</a></li>
                            <li><a href="#">{{ category.name }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--// SubHeader //-->
        <!--// Page Content //-->
        <section class="kode-pagesection">
            <div class="container">
                <div class="row">
                    <div class="kode-pagecontent col-md-9">
                        <div class="kode-blog-list kode-fullwidth-blog">
                            <ul class="row">
                                {% for post in articles %}
                                <li class="col-md-12">
                                    <div class="kode-time-zoon">
                                        <time datetime="{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}">{{ post.date ? post.date|date('d') : '' }} <span>{{ post.date ? post.date|date('M') : '' }}</span></time>
                                        <h5><a href="{{ path('article', { 'slug': post.slug }) }}">{{ post.title }}</a></h5>
                                    </div>
                                    <figure>
                                        <a href="{{ path('article', { 'slug': post.slug }) }}">
                                            <img src="https://psgimages.stadion.io/media/13202/tuchel.jpg?center=0.37113402061855671,0.31782945736434109&mode=crop&width=2000&height=1125&quality=80" alt="">
                                        </a>
                                    </figure>
                                    <div class="kode-blog-info">
                                        <ul class="kode-team-network">
                                            <li><a class="fab fa-facebook" href="#"></a></li>
                                            <li><a class="fab fa-twitter" href="#"></a></li>
                                            <li><a class="fab fa-linkedin" href="#"></a></li>
                                        </ul>
                                        <p>{{ post.resume }}</p>
                                    </div>
                                </li>
                                {% endfor %}
                            </ul>
                            <!--// Pagination //-->
                            <div class="pagination">
                                <a href="#"><i class="fa fa-angle-double-left"></i></a>
                                <a href="#">1</a>
                                <a href="#">2</a>
                                <span>3</span>
                                <a href="#">4</a>
                                <a href="#"><i class="fa fa-angle-double-right"></i></a>
                            </div>
                            <!--// Pagination //-->
                        </div>
                    </div>
                    <aside class="kode-pagesidebar col-md-3">
                        <div class="widget kode-recent-blog">
                            <div class="kode-widget-title">
                                <h2>Actus</h2>
                            </div>
                            <ul>
                                {% for post in allArticles %}
                                    <li><a href="{{ path('article', { 'slug': post.slug }) }}">{{ post.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="widget widget_categories">
                            <div class="kode-widget-title">
                                <h2>CATEGORIES</h2>
                            </div>
                            <ul>
                                {% for cat in categories %}
                                    <li><a href="{{ path('category', { 'slug': cat.slug }) }}">{{ cat.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </section>
        <!--// Page Content //-->
    </div>
    <!--// Main Content //-->
{% endblock %}
{% block javascripts %}
{% endblock %}