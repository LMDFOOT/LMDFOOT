<header id="mainheader" class="kode-header-absolute">
    <!--// TopBaar //-->
    <div class="kode-topbar">
        <div class="container">
            <div class="row">
                <div class="col-md-6 kode_bg_white">
                    <ul class="top_slider_bxslider">
                        {% for article in news %}
                        <li>
                            <span class="kode-barinfo">
                                <strong>{{ article.category.name }} : </strong> {{ article.title }}
                            </span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="kode-userinfo">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link" >
                                    <i class="fa fa-user"></i> {{ app.user.username }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                                    <a href="{{ path('user_logout') }}" class="dropdown-item">Deconnexion</a>
                                </div>
                            </li>
                            {% if app.user.roles[0] == "ROLE_ADMIN" %}
                                <li>
                                    <a href="{{ path('app_back_default_home') }}">Admin</a>
                                </li>
                            {% endif %}
                        {% else %}
                            <li><a href="{{ path('user_login') }}" ><i class="fa fa-sign-in"></i> Login</a></li>
                            <li><a href="{{ path('user_register') }}"><i class="fa fa-user-plus"></i> Register</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <div class="header-8">
        <div class="container">
            <!--NAVIGATION START-->
            <div class="kode-navigation pull-left">
                <ul>
                    {% for parentMenu in parentMenusLeft %}
                        <li>
                            <a href="#">{{ parentMenu.name }}</a>
                            <ul class="children">
                                {% for menu in menus %}
                                    {% if menu.parentItem is not null and menu.parentItem.id == parentMenu.id %}
                                        <li>
                                            <a href="#">{{ menu.name }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <!--NAVIGATION END-->
            <!--LOGO START-->
            <div class="logo">
                <a href="{{ path('homepage') }}" class="logo">
                    <img src="{{ asset(logo) }}" alt="">
                </a>
            </div>
            <!--LOGO END-->
            <!--NAVIGATION START-->
            <div class="kode-navigation">
                <ul>
                    {% for parentMenu in parentMenusRight %}
                        <li>
                            <a href="#">{{ parentMenu.name }}</a>
                            <ul class="children">
                                {% for menu in menus %}
                                    {% if menu.parentItem is not null and menu.parentItem.id == parentMenu.id %}
                                        <li>
                                            <a href="#">{{ menu.name }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</header>